@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CinemaMídia</title>
    <link rel="icon" type="image/png" href="~/logo/logoCinema.jpg">
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <header>
        <div class="logo" onclick="window.location.href='@Url.Action("NoneView", "Home")'" style="cursor: pointer;">
            <img src="~/logo/logoCinema.jpg" alt="Logo do site" width="75">
        </div>
    </header>

    <main>
        <div class="login-container">
            <h2>Login</h2>
            <form action="#" method="POST">
                <div class="input-group">
                    <label for="username">Nome:</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="input-group">
                    <label for="password">Senha:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="btn">Entrar</button>
            </form>
            <p class="register-link">Ainda não tem conta? @Html.ActionLink("Registe-se aqui.", "Create", "Clients")</p>
        </div>
    </main>
</body>
</html>
